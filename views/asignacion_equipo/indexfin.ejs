<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asignaciones de los equipos</title>
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
    <header>
        <a href="/menu" class="btn btn-secondary">Volver al menú <i class="fas fa-arrow-left"></i></a>
        <a href="/logout" class="logout-btn">Cerrar Sesión <i class="fas fa-sign-out-alt"></i></a>
    </header>

    <h1>Asignaciones de los equipos</h1>
    <a href="/asignacion_equipo" class="btn btn-info">Ver asignaciones activas <i class="fas fa-tools"></i></a>
    <table class="enhanced-table">
        <thead>
            <tr>
                <th>Código</th>
                <th>Equipo</th>
                <th>Técnico</th>
                <th>Fecha de asignación</th>
                <th>Fecha de finalización</th>
                <th>Estado</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% asignacion_equipo.forEach((dato)=>{ %>
                <tr>
                    <td>
                        <%= dato.codigo %>
                    </td>
                    <td>
                        <%= dato.equipo %>
                    </td>
                    <td>
                        <%= dato.tecnico %>
                    </td>

                    <td>
                        <%= dato.fecha_asignacion %>
                    </td>
                    <td>
                        <%= dato.fecha_finalizacion %>
                    </td>
                    <td>
                        <%= dato.estado %>
                    </td>
                    <td><a href="/verasignacionfin/<%= dato.codigo %>"class="btn-action btn-view" title="Ver"><i class="fas fa-eye"></i></a></td>
                    <td><a href="/desfinalizarasignacion/<%= dato.codigo %>"class="btn-action btn-view" title="Deshacer finalización"><i class="fas fa-tools"></i></a></td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</body>

</html>