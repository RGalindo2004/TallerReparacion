<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ver usuario</title>
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<header>
    <a href="/menu" class="btn btn-secondary">Volver al menú <i class="fas fa-arrow-left"></i></a>
    <a href="/logout" class="logout-btn">Cerrar Sesión <i class="fas fa-sign-out-alt"></i></a>
</header>

<body>
    <h1>Ver usuario de <%= usuario.nombre %> <%= usuario.apellido %> (<%= usuario.codigo %>)</h1>
    <form>

        <input type="hidden" name="codigo" id="codigo" value="<%= usuario.codigo %>">

        <label for="nombre">Nombre</label>
        <input type="text" name="nombre" id="nombre" value="<%= usuario.nombre %>" readonly>

        <label for="apellido">Apellido</label>
        <input type="text" name="apellido" id="apellido" value="<%= usuario.apellido %>" readonly>

        <label for="correoelectronico">Correo Electrónico</label>
        <input type="email" name="correoelectronico" id="correoelectronico" value="<%= usuario.correoelectronico %>" readonly>

        <label for="telefono">Telefono</label>
        <input type="text" name="telefono" id="telefono" value="<%= usuario.telefono %>" readonly>

        <input type="date" name="fecha_nacimiento" id="fecha_nacimiento" 
        value="<%= usuario.fecha_nacimiento ? usuario.fecha_nacimiento.toISOString().split('T')[0] : '' %>" readonly>

        <label for="genero">Género</label>
        <input type="text" name="genero" id="genero" value="<%= usuario.genero %>" readonly>

        <label for="estado">Estado</label>
        <input type="text" name="estado" id="estado" value="<%= usuario.estado %>" required>
        
        <label for="tipo">Tipo de usuario</label>
        <input type="text" name="tipo" id="tipo" value="<%= usuario.tipo %>" required>

        <a href="/usuarios" class="btn btn-secondary">Volver <i class="fas fa-arrow-left"></i></a>
    </form>
</body>
</html>