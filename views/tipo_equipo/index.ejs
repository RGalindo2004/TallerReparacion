<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de tipos de equipos</title>
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.21/jspdf.plugin.autotable.min.js"></script>
</head>

<body>
    <header>
        <a href="/menu" class="btn btn-secondary">Volver al menú <i class="fas fa-arrow-left"></i></a>
        <a href="/logout" class="logout-btn">Cerrar Sesión <i class="fas fa-sign-out-alt"></i></a>
    </header>

    <h1>Lista de tipos equipos</h1>

    <div class="action-buttons">
        <a href="/creartipoequipo" class="btn btn-success">Crear tipo de equipo <i class="fas fa-plus"></i></a>
        <a class="btn btn-success" onclick="exportarPDF()">Exportar a PDF<i class="fas fa-download"></i></a>
        <a href="/equipos" class="btn btn-secondary">Volver <i class="fas fa-arrow-left"></i></a>
    </div>

    <table class="enhanced-table" id="tablaTiposEquipos">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nombre del tipo</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% tipo_equipo.forEach((dato)=>{ %>
                <tr>
                    <td>
                        <%= dato.codigo %>
                    </td>
                    <td>
                        <%= dato.nombre %>
                    </td>
                    <div class="actions-container">
                        <td><a href="/editartipoequipo/<%= dato.codigo %>" class="btn-action btn-edit" title="Editar"><i class="fas fa-edit"></i></a></td>
                        <td><a href="/eliminartipoequipo/<%= dato.codigo %>" class="btn-action btn-deactivate" title="Eliminar"><i class="fas fa-trash-alt"></i></a></td>
                    </div>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <script>
    
        $(document).ready(function() {
            $('#tablaTiposEquipos').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "lengthMenu": [[5, 10, 25, -1], [5, 10, 25, "Todos"]]
            });
        });

        function exportarPDF() {
            const { jsPDF } = window.jspdf;
            let doc = new jsPDF();

            doc.setFontSize(16);
            doc.text("REPORTE DE TIPOS DE EQUIPOS", 105, 15, { align: "center" });

            let tabla = document.getElementById("tablaTiposEquipos");
            let filas = tabla.querySelectorAll("tbody tr");

            let datos = [];
            filas.forEach(fila => {
                let celdas = fila.querySelectorAll("td");
                let filaDatos = [];

                for (let i = 0; i < 2; i++) {
                    filaDatos.push(celdas[i].innerText);
                }
                datos.push(filaDatos);
            });

            let encabezados = [["Código", "Nombre del tipo"]];

            doc.autoTable({
                head: encabezados,
                body: datos,
                startY: 25
            });

            doc.save("tipos_equipos.pdf");
        }
    </script>
</body>

</html>